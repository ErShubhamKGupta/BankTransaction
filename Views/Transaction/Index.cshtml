@model IEnumerable<BankTransaction.Models.Transaction>

@{
    ViewData["Title"] = "Transaction List";
}

<h1>Passbook</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                <i class="fa-solid fa-file-invoice"></i> @Html.DisplayNameFor(model => model.AccountNumber)
            </th>
            <th>
                <i class="fa-solid fa-user"></i> @Html.DisplayNameFor(model => model.BeneficiaryName)
            </th>
            <th>
               <i class="fa-solid fa-building-columns"></i> @Html.DisplayNameFor(model => model.BankName)
            </th>
            @*<th>
            @Html.DisplayNameFor(model => model.IFSCCode)
            </th>*@

            <th>
                <i class="fa-solid fa-calendar"></i>  @Html.DisplayNameFor(model => model.TransactionDate)
            </th>
            <th>
                <i class="fa-solid fa-dollar-sign"></i> @Html.DisplayNameFor(model => model.Ammount)
            </th>
            <th>
                <a asp-action="AddOrEdit" class="btn btn-sm btn-success"><i class="fa-solid fa-plus"></i> New</a>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AccountNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BeneficiaryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BankName)
                </td>
                @* <td>
            @Html.DisplayFor(modelItem => item.IFSCCode)
            </td>*@

                <td>
                    @Html.DisplayFor(modelItem => item.TransactionDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ammount)
                </td>
                <td>

                    <form asp-action="Delete" asp-route-id="@item.TransactionID">
                        <div class="btn-group btn-group-sm">
                            <a asp-action="AddOrEdit" asp-route-id="@item.TransactionID" class="btn btn-warning">
                                <i class="fa-solid fa-pen-to-square"></i>
                            </a>
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure to delete this record?')">
                                <i class="fa-solid fa-trash-can"></i>
                            </button>
                        </div>

                    </form>
                    @* <a asp-action="Delete" asp-route-id="@item.TransactionID" class="btn btn-danger">
                <i class="fa-solid fa-trash-can"></i>
                </a>*@
                </td>
            </tr>
        }
    </tbody>
</table>
